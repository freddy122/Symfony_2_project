{% extends 'MyappFilmothequeBundle::layout.html.twig' %}
{% block title %}Voir acteur{% endblock %}
{% block content %}
<div class="page-header">
	<h1>
		Acteur
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			Detail acteur
		</small>
	</h1>
</div>
<div class="row">
	<div class="col-xs-12">

		<form class="form-horizontal" role="form">
		{% for a in film %}
			<div class="form-group">
				<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Nom</label>
				<div class="col-sm-9">
					<input id="form-field-1" class="col-xs-10 col-sm-5" type="text" value="{{ a.titre }}" readonly>
				</div>
			</div>
			
			<div class="form-group">
				<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Pr√©nom</label>
				<div class="col-sm-9">
					<input id="form-field-1" class="col-xs-10 col-sm-5" type="text" value="{{ a.description }}" readonly>
				</div>
			</div>
			
			<div class="form-group">
				<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Sexe</label>
				<div class="col-sm-9">
					<input id="form-field-1" class="col-xs-10 col-sm-5" type="text" value="{{ a.categorie }}" readonly>
				</div>
			</div>
		{% endfor %}
		</form>
	</div>
</div>
	<div class="clearfix form-actions">
		<div class="col-md-offset-3 col-md-9">
			<a class="btn btn-info" type="button" href="{{ path('myapp_film_lister') }}"><i class="ace-icon fa fa-exchange bigger-110"></i>Retour</a>
			<!--button class="btn" type="reset"><i class="ace-icon fa fa-undo bigger-110"></i>Reset</button-->
		</div>
	</div>
{% endblock %}